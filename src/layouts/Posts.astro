---
import PostCard from "./components/PostCard.astro";

const { className, posts } = Astro.props;
---

<div class={`grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 2xl:grid-cols-5 gap-3 md:gap-4 ${className}`}>
  {
    posts.map((post: any) => (
      <PostCard post={post} />
    ))
  }
</div>
