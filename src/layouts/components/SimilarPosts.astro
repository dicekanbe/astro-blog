---
import PostCard from "@/layouts/components/PostCard.astro";
const { posts } = Astro.props;
---

<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
  {
    posts.map((post: any, i: number) => (
      <div class={i === 2 ? "hidden md:block" : ""}>
        <PostCard {post} />
      </div>
    ))
  }
</div>
